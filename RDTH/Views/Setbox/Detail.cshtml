@model RDTH.Models.SetBoxViewModel.SetBoxDetailModel
@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(Model.ImageUrl)" class="img-responsive" alt="Sample Image" style="height:250px;width:350px;" /><br />
        </div>
        <div class="col-md-6">
            <h3 class="text-warning">@Model.Name</h3>
            <p style="color:white;font-family:'Lato',sans-serif;font-size:14px">
                @Html.Raw(Model.Specification.ToString().Replace(",", "<br />"))
            </p>
            <h3 style="border:1px solid orange" class="text-info text-center">Rs @Model.Price</h3><br />
            @await Html.PartialAsync("_Selection")
        </div>
    </div>

</div>
