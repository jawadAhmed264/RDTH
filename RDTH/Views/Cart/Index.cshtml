@model RDTH.Data.Models.Cart
@{
    ViewData["Title"] = "Cart";
}

<h2 class="text-info">Shopping Cart</h2>
<div class="row">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ItemList)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price</td>
                    <td>@item.Qty</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="Remove" asp-route-Id="@item.Id">Remove Item</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-md-6">
        <h4 class="text-warning">Total Price: @Model.TotalPrice</h4>
        <h4 class="text-danger">Total Items: @Model.TotalItems</h4>
    </div>
    <div class="col-md-2 col-md-push-3">
        <a asp-controller="Checkout" asp-action="Index" class="btn btn-warning">Check Out</a>
    </div>
</div>

<a asp-controller="Setbox" asp-action="Index"><span class="text-info">Back to SetBox</span></a>

