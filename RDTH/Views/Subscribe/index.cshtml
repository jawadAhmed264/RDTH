@model RDTH.Models.SubscribeViewModel.SubscribeAddModel

@{
    ViewData["Title"] = "NewSubscribe";
}

@if (ViewBag.success=="success")
{
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-info alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="fa fa-info-circle"></i>  <strong>@ViewBag.msg</strong>
            </div>
        </div>
    </div>
}
<h2>New Subscription Request Panel</h2>

<h4>Please fill all the fields correctly, We will contact you soon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OwnerName" class="control-label"></label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageId" class="control-label"></label>
                <select asp-for="PackageId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Packages,"Id","PackageName"))"></select>
                <span asp-validation-for="PackageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetBoxId" class="control-label"></label>
                <select asp-for="SetBoxId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.SetBoxes,"Id","Name"))"></select>
                <span asp-validation-for="SetBoxId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Subscribe" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-6 pull-right">
        <img src="~/images/dish-tv-network.jpg" height="300" width="400" class="img-responsive img-rounded" />
    </div>
</div>


