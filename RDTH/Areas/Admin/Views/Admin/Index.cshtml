@model RDTH.Areas.Admin.Models.AdminViewModel.AdminIndexViewModel

@{
    ViewData["Title"] = "Dashboard";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Dashboard <small>Statistics Overview</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-comments fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.LatestFeedbacks</div>
                        <div>New Feed Back!</div>
                    </div>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="Feedback" asp-action="index">
                <div class="panel-footer">
                    <span class="pull-left">View</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.LatestSubscribe</div>
                        <div>New Subscription!</div>
                    </div>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="SubscribeAdmin" asp-action="Index">
                <div class="panel-footer">
                    <span class="pull-left">View</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.LatestOrders</div>
                        <div>New Orders!</div>
                    </div>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="Order" asp-action="Index">
                <div class="panel-footer">
                    <span class="pull-left">View</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-film fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Model.LatestMOD</div>
                        <div>Movies On Demand!</div>
                    </div>
                </div>
            </div>
            <a asp-area="Admin" asp-controller="MOD" asp-action="Index">
                <div class="panel-footer">
                    <span class="pull-left">View</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Latest FeedBacks</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feedback in Model.Feedbacks)
                {
                    <tr>
                        <td>@feedback.Name</td>
                        <td>@feedback.Email</td>
                        <td>@feedback.Msg</td>
                        <td>@feedback.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h4>Latest Recharge History</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Package Name</th>
                    <th>Date</th>
                    <th>Customer Card</th>
                    <th>Customer Name</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recharge in Model.RechargeCatalog)
                {
                    <tr>
                        <td>@recharge.Package.PackageName</td>
                        <td>@recharge.RechargeDate</td>
                        <td>@recharge.CustomerCard.CardNumber</td>
                        <td>@recharge.CustomerCard.OwnerName</td>
                        <td>@recharge.Cost</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h4>Latest Orders</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Items</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.DatePlaced</td>
                        <td>@order.Status</td>
                        <td>@order.Cart.TotalItems</td>
                        <td>@order.Cart.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h4>Recent Payments</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Package Name</th>
                    <th>Date</th>
                    <th>Customer Card</th>
                    <th>Customer Name</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pay in Model.Payments)
                {
                    <tr>
                        <td>@pay.PaymentDate</td>
                        <td>@pay.PaymentType</td>
                        <td>@pay.Cost</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
